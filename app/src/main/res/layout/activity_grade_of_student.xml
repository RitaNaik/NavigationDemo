<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_grade_of_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.GradeOfStudent">

    <TextView
        android:text="Subject 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtFirst"
        android:layout_alignLeft="@+id/txtFirst"
        android:layout_alignStart="@+id/txtFirst"
        android:layout_marginTop="26dp"
        android:id="@+id/txtSecond" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edtFirst"
        android:layout_alignLeft="@+id/edtFirst"
        android:layout_alignStart="@+id/edtFirst"
        android:layout_marginTop="11dp"
        android:id="@+id/edtSecond" />

    <TextView
        android:text="Subject 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSecond"
        android:layout_alignRight="@+id/txtSecond"
        android:layout_alignEnd="@+id/txtSecond"
        android:layout_marginTop="30dp"
        android:id="@+id/txtThird" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edtSecond"
        android:layout_alignRight="@+id/edtSecond"
        android:layout_alignEnd="@+id/edtSecond"
        android:layout_marginTop="17dp"
        android:id="@+id/edtThird" />

    <TextView
        android:text="Subject 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtThird"
        android:layout_alignLeft="@+id/txtThird"
        android:layout_alignStart="@+id/txtThird"
        android:layout_marginTop="30dp"
        android:id="@+id/txtFour" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edtThird"
        android:layout_alignLeft="@+id/edtThird"
        android:layout_alignStart="@+id/edtThird"
        android:layout_marginTop="19dp"
        android:id="@+id/edtFour" />

    <TextView
        android:text="Subject 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtFour"
        android:layout_alignRight="@+id/txtFour"
        android:layout_alignEnd="@+id/txtFour"
        android:layout_marginTop="28dp"
        android:id="@+id/txtFive" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edtFour"
        android:layout_alignRight="@+id/edtFour"
        android:layout_alignEnd="@+id/edtFour"
        android:layout_marginTop="13dp"
        android:id="@+id/edtFive" />

    <TextView
        android:text="Subject 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtFive"
        android:layout_alignLeft="@+id/txtFive"
        android:layout_alignStart="@+id/txtFive"
        android:layout_marginTop="34dp"
        android:id="@+id/txtSix" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edtFive"
        android:layout_alignLeft="@+id/edtFive"
        android:layout_alignStart="@+id/edtFive"
        android:layout_marginTop="19dp"
        android:id="@+id/edtSix" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btnGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/edtGrade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtFirst"
        android:layout_alignTop="@+id/txtFirst"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Subject 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="43dp"
        android:id="@+id/txtFirst"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Grade"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGrade"
        android:layout_below="@+id/edtSix"
        android:layout_alignLeft="@+id/edtSix"
        android:layout_alignStart="@+id/edtSix"
        android:layout_marginTop="12dp" />


</RelativeLayout>
