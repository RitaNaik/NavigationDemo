<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_length_conversion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.LengthConversion">

    <TextView
        android:text="Inches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtFeet"
        android:layout_alignLeft="@+id/txtFeet"
        android:layout_alignStart="@+id/txtFeet"
        android:layout_marginTop="47dp"
        android:id="@+id/txtInches" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/edtFeet"
        android:layout_alignLeft="@+id/edtFeet"
        android:layout_alignStart="@+id/edtFeet"
        android:layout_marginTop="34dp"
        android:id="@+id/edtInches" />

    <Button
        android:text="Convert"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtInches"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/btnConvert" />

    <TextView
        android:text="Centimeters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConvert"
        android:layout_alignLeft="@+id/txtInches"
        android:layout_alignStart="@+id/txtInches"
        android:layout_marginTop="56dp"
        android:id="@+id/txtCm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btnConvert"
        android:layout_alignLeft="@+id/btnConvert"
        android:layout_alignStart="@+id/btnConvert"
        android:layout_marginTop="43dp"
        android:id="@+id/edtCm" />

    <TextView
        android:text="Feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="68dp"
        android:id="@+id/txtFeet"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtFeet"
        android:layout_alignBaseline="@+id/txtFeet"
        android:layout_alignBottom="@+id/txtFeet"
        android:layout_alignLeft="@+id/btnConvert"
        android:layout_alignStart="@+id/btnConvert" />
</RelativeLayout>
