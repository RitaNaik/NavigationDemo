<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_array_operations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.ArrayOperations">


    <TextView
        android:text="Array Elements Are"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtSort"
        android:layout_alignLeft="@+id/txtInput"
        android:layout_alignStart="@+id/txtInput"
        android:layout_marginBottom="52dp"
        android:id="@+id/txtArray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtArray"
        android:layout_alignBaseline="@+id/txtArray"
        android:layout_alignBottom="@+id/txtArray"
        android:layout_alignLeft="@+id/edtSort"
        android:layout_alignStart="@+id/edtSort"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtSort"
        android:layout_alignBaseline="@+id/txtSort"
        android:layout_alignBottom="@+id/txtSort"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtOdd"
        android:layout_alignBaseline="@+id/txtOdd"
        android:layout_alignBottom="@+id/txtOdd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Sum Of Even No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEven"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtOdd"
        android:layout_alignStart="@+id/txtOdd"
        android:layout_marginBottom="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtEven"
        android:layout_alignBaseline="@+id/txtEven"
        android:layout_alignBottom="@+id/txtEven"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_above="@+id/btnDisplay"
        android:layout_toRightOf="@+id/txtArray"
        android:layout_toEndOf="@+id/txtArray"
        android:layout_marginBottom="12dp" />

    <TextView
        android:text="Enter Elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInput"
        android:layout_alignBaseline="@+id/edtInput"
        android:layout_alignBottom="@+id/edtInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDisplay"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/edtArray"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtInput"
        android:layout_above="@+id/btnAdd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Sorted Array"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSort"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/edtOdd"
        android:layout_alignRight="@+id/txtInput"
        android:layout_alignEnd="@+id/txtInput" />

    <TextView
        android:text="Sum Of Odd No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtOdd"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/edtEven"
        android:layout_alignLeft="@+id/txtSort"
        android:layout_alignStart="@+id/txtSort" />


</RelativeLayout>
