<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.CheckCharacter">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:ems="10"
        android:layout_below="@+id/btnCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:id="@+id/edtResult" />

    <Button
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/btnCheck"
        android:textAllCaps="false"
        android:layout_below="@+id/edtInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Enter Any Character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInput"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnCheck"
        android:layout_toStartOf="@+id/btnCheck"
        android:layout_marginTop="84dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtInput"
        android:maxLength="3"
        android:layout_alignBaseline="@+id/txtInput"
        android:layout_alignBottom="@+id/txtInput"
        android:layout_toRightOf="@+id/txtInput"
        android:layout_toEndOf="@+id/txtInput"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />


</RelativeLayout>
