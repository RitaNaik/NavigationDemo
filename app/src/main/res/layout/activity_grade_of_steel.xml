<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_grade_of_steel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.GradeOfSteel">

    <TextView
        android:text="CarbonContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtHardness"
        android:layout_marginTop="51dp"
        android:id="@+id/txtCarbon" />

    <TextView
        android:text="Tensile Strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtCarbon"
        android:layout_alignLeft="@+id/txtHardness"
        android:layout_alignStart="@+id/txtHardness"
        android:layout_marginTop="55dp"
        android:id="@+id/txtTensile" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edtCarbon"
        android:layout_alignLeft="@+id/edtCarbon"
        android:layout_alignStart="@+id/edtCarbon"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="44dp"
        android:id="@+id/edtTensile" />

    <Button
        android:text="Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTensile"
        android:layout_toRightOf="@+id/txtTensile"
        android:layout_toEndOf="@+id/txtTensile"
        android:layout_marginTop="36dp"
        android:id="@+id/btnGrade"
        android:textAllCaps="false"/>

    <TextView
        android:text="Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGrade"
        android:layout_alignRight="@+id/txtHardness"
        android:layout_alignEnd="@+id/txtHardness"
        android:layout_marginTop="32dp"
        android:id="@+id/txtGrade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btnGrade"
        android:layout_alignLeft="@+id/btnGrade"
        android:layout_alignStart="@+id/btnGrade"
        android:layout_marginTop="17dp"
        android:id="@+id/edtGrade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtCarbon"
        android:layout_alignBaseline="@+id/txtCarbon"
        android:layout_alignBottom="@+id/txtCarbon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtHardness"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Hardness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/txtHardness"
        android:layout_alignBaseline="@+id/edtHardness"
        android:layout_alignBottom="@+id/edtHardness"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
