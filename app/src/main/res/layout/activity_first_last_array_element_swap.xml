<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_last_array_element_swap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.FirstLastArrayElementSwap">

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtElements"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/btnAdd" />

    <TextView
        android:text="Before Swapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_alignLeft="@+id/txtElements"
        android:layout_alignStart="@+id/txtElements"
        android:layout_marginTop="50dp"
        android:id="@+id/txtBefore" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btnAdd"
        android:layout_toRightOf="@+id/txtElements"
        android:layout_toEndOf="@+id/txtElements"
        android:layout_marginTop="37dp"
        android:id="@+id/edtBefore" />

    <Button
        android:text="Swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtBefore"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:layout_marginTop="11dp"
        android:id="@+id/btnSwap" />

    <TextView
        android:text="After Swapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSwap"
        android:layout_alignLeft="@+id/txtBefore"
        android:layout_alignStart="@+id/txtBefore"
        android:layout_marginTop="61dp"
        android:id="@+id/txtAfter" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btnSwap"
        android:layout_alignLeft="@+id/edtBefore"
        android:layout_alignStart="@+id/edtBefore"
        android:layout_marginTop="46dp"
        android:id="@+id/edtAfter" />

    <TextView
        android:text="Enter Array Elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtElements"
        android:layout_alignBaseline="@+id/edtElements"
        android:layout_alignBottom="@+id/edtElements"
        android:layout_toLeftOf="@+id/btnAdd"
        android:layout_toStartOf="@+id/btnAdd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="37dp"
        android:id="@+id/edtElements"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtElements"
        android:layout_toEndOf="@+id/txtElements"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />
</RelativeLayout>
