<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_machine_test2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.MachineTest2">

    <TextView
        android:text="Product Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/txtProductName"
        android:layout_below="@+id/txtTitle"
        android:layout_alignRight="@+id/edtProductName"
        android:layout_alignEnd="@+id/edtProductName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:layout_marginTop="17dp"
        android:id="@+id/edtProductName"
        android:layout_below="@+id/txtProductName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Product Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtProductPrice"
        android:layout_above="@+id/edtProductName"
        android:layout_toRightOf="@+id/txtTitle"
        android:layout_toEndOf="@+id/txtTitle" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtProductPrice"
        android:layout_alignBaseline="@+id/edtProductName"
        android:layout_alignBottom="@+id/edtProductName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtPrice"
        android:layout_toEndOf="@+id/txtPrice" />
    <Button
        android:text="Save Product"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:layout_below="@+id/edtProductPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Product List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtList"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnSave"
        android:layout_alignLeft="@+id/txtProductName"
        android:layout_alignStart="@+id/txtProductName" />


    <TextView
        android:text="Product Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtList"
        android:layout_alignLeft="@+id/btnSave"
        android:layout_alignStart="@+id/btnSave"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/txtPrice" />


    <TextView
        android:text="Product Qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtPrice"
        android:layout_toRightOf="@+id/txtTitle"
        android:layout_toEndOf="@+id/txtTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/txtProductQty" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/txtList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDispPrice"
        android:ems="3"
        android:textColor="#ff1a0e"
        android:layout_alignTop="@+id/edtQty"
        android:layout_toRightOf="@+id/txtDisp"
        android:layout_toEndOf="@+id/txtDisp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtQty"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtProductPrice"
        android:layout_alignStart="@+id/txtProductPrice" />

    <Button
        android:text="Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTotal"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff1a0e"
        android:ems="5"
        android:id="@+id/txtDispAmount"
        android:layout_below="@+id/btnTotal"
        android:layout_alignLeft="@+id/txtProductQty"
        android:layout_alignStart="@+id/txtProductQty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="8"
        android:id="@+id/txtDisp1"
        android:layout_below="@+id/txtDisp"
        android:layout_alignLeft="@+id/txtDisp"
        android:layout_alignStart="@+id/txtDisp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:id="@+id/txtDisp3"
        android:layout_below="@+id/txtDisp2"
        android:layout_alignLeft="@+id/txtDisp2"
        android:layout_alignStart="@+id/txtDisp2"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Total Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/txtDispAmount"
        android:layout_alignLeft="@+id/txtList"
        android:layout_alignStart="@+id/txtList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:id="@+id/txtDisp4"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtDisp3"
        android:layout_alignStart="@+id/txtDisp3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:id="@+id/txtDisp2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtDisp1"
        android:layout_alignLeft="@+id/txtDisp1"
        android:layout_alignStart="@+id/txtDisp1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Information"
        android:id="@+id/txtTitle"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="8"
        android:id="@+id/txtDisp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />


</RelativeLayout>
