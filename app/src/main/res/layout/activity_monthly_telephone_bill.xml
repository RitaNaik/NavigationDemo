<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_monthly_telephone_bill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rita_pc.demonavigation.MonthlyTelephoneBill">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtBill"
        android:layout_below="@+id/btnBill"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="Monthly Bill Is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBill"
        android:layout_alignBaseline="@+id/edtBill"
        android:layout_alignBottom="@+id/edtBill"
        android:layout_alignLeft="@+id/txtCalls"
        android:layout_alignStart="@+id/txtCalls"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="Enter No. Of calls In a Month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:id="@+id/txtCalls"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:ems="8"
        android:id="@+id/edtCalls"
        android:layout_alignBaseline="@+id/txtCalls"
        android:layout_alignBottom="@+id/txtCalls"
        android:layout_toRightOf="@+id/txtCalls"
        android:layout_toEndOf="@+id/txtCalls"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Button
        android:text="Generate Bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/btnBill"
        android:textAllCaps="false"
        android:layout_below="@+id/edtCalls"
        android:layout_alignLeft="@+id/edtBill"
        android:layout_alignStart="@+id/edtBill" />

</RelativeLayout>
